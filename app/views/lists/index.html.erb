<% provide(:title, current_user.email) %>
<% @lists.each do |list| %>
  <div class="list-header">
    <%= image_tag("note.png", class: "note-img") %>

    <div class="list">
      <%= list.title %>
      <%= list.descriotion %>
    </div>

    <div class="edit-list">
      <%= link_to "#{image_tag("edit_img.png", class: "link-list")}".html_safe, edit_list_path(list) %>

      <div class="line"></div>
      <%= link_to "#{image_tag("delete_img.png", class: "link-list")}".html_safe, list, method: :delete %>
    </div>
  
  </div>
  <%= form_for(:task, url: tasks_path, html: { class: "add-task"}) do |f| %>
    <%= image_tag("Green.png", class: "greenplus")%>
    <%= f.text_field :content, placeholder: "Start typing here to create a task..." %>
    <%= f.hidden_field :list_id , value: list.id%>
    <%= f.submit "Add Task" %>
  <% end %>

  <ul id="list<%=list.id%>" class="task-list">
  
    <% list.tasks.each do |task| %>
    <% if task.completed? %>
    <li class="task" id="task_<%= task.id %>" >
      <div class="complete">
      
        <i style="color: #006400;" class="glyphicon glyphicon-ok"></i>
      
    </div>
  
      <label for=<%=task.id %> ></label>
        <p style="opacity: 0.5;"><strike><%= task.content %></strike></p>
      
      <div class="control-task">
      <div class="task_priority">
      
        <span class="glyphicon glyphicon-sort"></span>
        </div> 
        <div class="linetwo"></div>
        <div class="task_edit">      
        <%= link_to edit_task_path(task) do %>
         <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          </div>  
        <div class="linetwo"></div>
        <div class="trash">
        <%= link_to task, method: :delete do %>
         <i class="glyphicon glyphicon-trash"></i>
          <% end %>
          </div>
      </div>
    </li>
  <% else %>
    <li class="task" id="task_<%= task.id %>" >
      <div class="complete">
      <%= link_to complete_task_path(task), method: :patch do %>
        <i class="glyphicon glyphicon-ok"></i>
      <% end %>
    </div>
  
      <label for=<%=task.id %> ></label>
        <p><%= task.content %></p>
      
      <div class="control-task">
      <div class="task_priority">
      
        <span class="glyphicon glyphicon-sort"></span>
        </div> 
        <div class="linetwo"></div>
        <div class="task_edit">      
        <%= link_to edit_task_path(task) do %>
         <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          </div>  
        <div class="linetwo"></div>
        <div class="trash">
        <%= link_to task, method: :delete do %>
         <i class="glyphicon glyphicon-trash"></i>
          <% end %>
          </div>
      </div>
    </li>
    <% end %>
  <% end %>
  </ul>
<% end %>

<%= link_to "#{image_tag("blue.png")}" 'Add TODO List'.html_safe, new_list_path, class: "add-button" %>
